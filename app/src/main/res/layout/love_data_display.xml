<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/love_relations"
            android:layout_width="match_parent"
            android:id="@+id/card_image"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:id="@+id/display_love_speech"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:text="Displaying Relation Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:gravity="center"
                android:drawableLeft="@drawable/write_start"
                android:textStyle="bold"
                android:id="@+id/display_love_speaker"
                android:textColor="#FFFFFF"
                android:text="Displaying Speaker"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/display_love_speech"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>