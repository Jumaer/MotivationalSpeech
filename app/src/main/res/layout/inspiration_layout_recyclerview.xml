<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:padding="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="288dp">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/card_background_inspiration"
            android:layout_width="match_parent"
            android:id="@+id/card_image2"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:id="@+id/Inspirational_speech"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:text="Reality Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:gravity="center"
                android:drawableLeft="@drawable/write_start"
                android:textStyle="bold"
                android:id="@+id/inspirational_speaker"
                android:textColor="#FFFFFF"
                android:text="Speaker"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Inspirational_speech"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>